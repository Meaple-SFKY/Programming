/* pages/demo6/demo6.wxss */

.viewBox {
	padding: 20rpx;
	box-sizing: border-box;
}

.row {
	display: flex;
	height: 180rpx;
	background-color: #ffffff;
	border-bottom: 3rpx solid #ccc;
	border-radius: 0.2cm;
	border-top: 3rpx solid #eee;
	border-left: 3rpx solid #eee;
	border-right: 3rpx solid #eee;
	margin-bottom: 15rpx;
}

.pic {
	flex: 3;
}

.pic image {
	width: 100%;
	height: 100%;
	border-radius: 0.2cm;
	border-right: 2rpx solid #ddd;
}

.text {
	flex: 7;
	padding-left: 10rpx;
	padding-top: 5rpx;
	padding-bottom: 5rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	background-color: #f5f5f5;
	border-radius: 0.2cm;
	border-left: 3rpx solid #eee;
}

.text .title {
	font-size: 30rpx;
}

.text .time {
	font-size: 25rpx;
	color: #999999;
}